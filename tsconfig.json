{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "rootDirs": ["src", "stories"],
    "baseUrl": "./src",
    "paths": {
      "@src": ["src"]
    }
  },
  "include": [
    "./src",
    "./stories"
  ],
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "dist",
    "build",
    "node_modules",
    "config",
    "webpack",
    "jest"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
